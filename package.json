{
  "name": "@zcong/grpc-resolver-k8s",
  "version": "0.4.0",
  "description": "k8s resolver for @grpc/grpc-js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc --build tsconfig.json",
    "example": "rm -rf dist && tsc --build ./example/tsconfig.json && cp -a ./example/generated ./dist/example",
    "docker": "docker build -t zcong/k8s-grpc -f ./example/Dockerfile .",
    "test": "run-s lint jest",
    "test:cov": "run-s lint jest:cov",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write .",
    "jest": "jest --detectOpenHandles --forceExit",
    "jest:cov": "npm run jest -- --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "release": "node ./scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path ."
  },
  "types": "./dist/index.d.ts",
  "author": "zcong1993",
  "license": "MIT",
  "devDependencies": {
    "@grpc/grpc-js": "^1.3.7",
    "@types/google-protobuf": "^3.15.5",
    "@types/jest": "^28.0.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chalk": "^5.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "execa": "^6.0.0",
    "google-protobuf": "^3.18.0-rc.2",
    "grpc-tools": "^1.11.2",
    "husky": "^8.0.0",
    "jest": "^28.0.0",
    "lint-staged": "^13.0.0",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "prettier-plugin-organize-imports": "^2.3.3",
    "prompts": "^2.4.1",
    "semver": "^7.3.5",
    "ts-jest": "^28.0.0",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.0",
    "cockatiel": "^2.0.2"
  },
  "peerDependencies": {
    "@grpc/grpc-js": "^1.3.7"
  },
  "bugs": "https://github.com/zcong1993/grpc-resolver-k8s/issues",
  "homepage": "https://github.com/zcong1993/grpc-resolver-k8s",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zcong1993/grpc-resolver-k8s.git"
  }
}
